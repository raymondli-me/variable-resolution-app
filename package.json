{
  "name": "vr-collector",
  "version": "1.0.0",
  "description": "Offline Data Collector for Variable Resolution - YouTube & Multi-source",
  "main": "main.js",
  "type": "commonjs",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "test:ui": "playwright test",
    "test:discover": "playwright test tests/ui/discover-state.spec.js",
    "test:e2e": "playwright test tests/e2e/full-pipeline.spec.js",
    "migrate:fix-missing": "node scripts/add-missing-tables.js",
    "migrate:lineage": "node scripts/add-lineage-to-collections.js",
    "build": "electron-builder",
    "build-linux": "electron-builder --linux",
    "build-mac": "electron-builder --mac",
    "build-all": "electron-builder -mwl"
  },
  "keywords": [
    "youtube",
    "data-collection",
    "research",
    "offline"
  ],
  "author": "Variable Resolution Team",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.56.0",
    "electron": "^28.3.3",
    "electron-builder": "^24.9.1",
    "pdfkit": "^0.17.2"
  },
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "adm-zip": "^0.5.16",
    "archiver": "^7.0.1",
    "axios": "^1.6.2",
    "compromise": "^14.14.4",
    "googleapis": "^128.0.0",
    "pdf-lib": "^1.17.1",
    "pdf-parse": "^2.1.7",
    "pdfjs-dist": "^2.16.105",
    "sqlite3": "^5.1.6"
  },
  "build": {
    "appId": "com.variableresolution.collector",
    "productName": "VR Data Collector",
    "directories": {
      "output": "dist"
    },
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Development"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ]
    }
  }
}
